/**workDetails.wxss**/

.container{
  background-color:#f5f5f5;
}

  /*top*/
    .top{
      width:750rpx;
      display: flex;
      padding-top:20px;
      padding-bottom:20px;
      background-color: #f5f5f5;
    }
    .top .head-logo{
      width:25px;
      height:20px;
      margin-left:20px;
    }
    .top .head-logo image{
      width:100%;
      height: 100%;
    }
    .top .hunting{
      font-size:14px;
      font-weight: 600;
      margin-left:15px;
    }
    .top .fonts{
      font-size:10px;
      padding-top:3px;
      color:#999;
      margin-left:20px;
    }

  /* head */
    .head{
      width:50px;
      height: 50px;
      margin-bottom: 20px;
    }
    .head image{
      width:100%;
      height: 100%;
      border-radius: 50%;
    }

  /*list*/
    .list{
      width:100%;
      border-top:5px #fff solid;
      background-color:#f9f9f9; 
    }
    .list .update{
      display: flex;
      position: relative;
      border-bottom:5px #fff solid;
    }
    .list .update .update-logo{
      width:18px;
      height:23px;
      padding:10px 20px;
    }
    .list .update .update-logo image{
      width:100%;
      height:100%;
      color:red;
    }
    .list .update text{
      font-size:12px;
      color:#030303;
    }
    .list .update .book{
      padding-top:13px;
    }
    .list .update .more{
      position: absolute;
      right:10px;
      font-size:16px;
      color:#bbb;
      font-weight: 600;
      top:10px;
    }
    .list .collect .update-logo{
      width:20px;
      height: 20px;
    }









