.myMap{
  width: 100%;
  height: 100%;
  overflow: hidden
}
.myMap_top{
  width: 80%;
  height: 30px;
  display: flex;
  border-radius: 15px;
  background: rgb(240, 239, 244);
  margin: 0 auto;
  overflow: hidden;
}
.myMap_top image{
  width: 20px;
  height: 20px;
  display: block;
  margin-top: 5px;
  margin-left: 15px;
}
.myMap_top input{
  width: 92%;
  height: 30px;
  font-size: 15px;
  margin-left: 5px;
}
.myMap_home{
  width: 100%;
  height: 40px;
  background: rgb(243, 247, 250);
  display: flex;
  margin-top: 8px;
}
.myMap_home view{
  height: 40px;
  line-height: 40px;
  color: rgb(148, 153, 155);
  font-size: 18px;
  padding-left: 20px;
}
.myMap_home image{
  width: 25px;
  height: 25px;
  margin-top: 7.5px;
  margin-left: 5px;
}
.myMap_place{
  width: 100%;
  display: flex;
  padding: 3%;
}
.place_left{
  width: 80%;
}
.home_place view{
  background: rgb(244, 244, 244);
  height: 30px;
  line-height: 30px;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
}
.vv_center{
  width: 150px;
  margin-left: 10px;
  margin-bottom: 10px;
  background: rgb(244, 244, 244);
  height: 30px;
  line-height: 30px;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
}
.place_right{
  width: 18%;
}
.place_right view{
  text-align: center;
  font-size: 16px;
  line-height: 30px;
}
.searchLetter{
position: fixed;
right: 0;
width: 40px;
height: 100%;
text-align: center;
justify-content: center;
display: flex;
flex-direction: column;
color: #666;
z-index: 1
}
.searchLetter view{
height: 70rpx;
}
.touchClass{
  width: 60px;
  text-align: center;
background-color: white;
color: black;
font-size: 16px;
}
.showSlectedLetter{
background-color: rgba(0, 0, 0,0.5);
color: #fff;
display: flex;
justify-content: center;
align-items: center;
position: fixed;
top:50%;
left: 50%;
margin: -50px;
width: 100px;
height: 100px;
border-radius:10px; 
font-size: 26px;
z-index: 1
}
.selection{
display: flex;
width: 100%;
flex-direction: column;
}
.item_letter{
display: flex;
background-color: #f8f8f8;
height: 30px;
padding-left: 10px;
align-items: center;
}
.item_city{
display: flex;
background-color: #fff;
height: 40px;
padding-left: 10px;
align-items: center;
border-bottom: 1px solid #f8f8f8;
}