.search{
  width: 90%;
  /* overflow: hidden; */
}
.search input,icon{
  display: inline-block
}
.search input{
  width: 90%;
  margin-left: 20px;
  border: 1rpx solid #D9D9D9;
  border-radius: 10px;
  font-size: 15px;
  padding-left: 20px
}
.search icon{
   position: absolute; 
   top: 2px;
   left: 85%; 
  margin-top: 5rpx;
  /* float: right */
}
.recom{
  width: 100%;
  display: flex;
   justify-content: space-between; 
  border-top: 1px solid #D9D9D9;
  border-bottom: 1px solid #D9D9D9;
}
.recom_div{
  margin: 10px 0 10px 20%;
  font-size: 20px
}
.recom button{
  margin-right: 20%;
  height: 30px;
  line-height: 30px;
  margin-top: 10px;
}
.picwen{
  width: 90%;
  border-bottom: 7px solid #F4F4F4;
}
.picwen image{
  width: 40px;
  height: 40px;
  display: inline-block;
  padding-bottom: 50px;
  margin-top: 10px;
}
.picwen .picwen_top,.picwen_bottom{
  display: inline-block
}
.picwen .picwen_top{
  width: 20%;
  float: left;
}
.picwen .picwen_center{
  width: 80%;
  font-size: 10px;
  margin-bottom: 10px;
  color: #A1A1A1;
}
.picwen_center .center_p{
  font-size: 16px;
  margin-top: 8px;
  color: #2D2D2D;
  margin-bottom: 5px;
}
.picwen .picwen_bottom{
  width: 80%;
  font-size: 10px;
  color:#A1A1A1;
}
.picwen .picwen_bottom .bottom_w view{
  display: inline-block;
  background: #F7F7F7;
  margin-right: 5px;
}
.picwen_bottom .bottom_p{
  width: 90%;
  display: block;
  font-size: 15px;
  color: #7B7B7B;
}
.bottom_p .bottom_p_s{
  color: #FF9DA8;
  display: inline-block;
}
.tabbar{
  width: 90%;
  height: 50px;
  position: fixed;
  top: 92%;
  display: flex;
  justify-content: space-between;
}
.tabbar view{
  width: 50%;
  padding: 10px;
  text-align: center;
  border: 1px solid orange;
  border-radius: 10px;
  background: black;
  color: white
}